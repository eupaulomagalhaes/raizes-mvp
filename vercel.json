{
  "version": 2,
  "public": true,
  "builds": [
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/sw.js", "dest": "/public/sw.js" },
    { "src": "/manifest.json", "dest": "/public/manifest.json" },
    { "src": "/img/(.*)", "dest": "/public/img/$1" },
    { "src": "/games/(.*)", "dest": "/public/games/$1" },
    { "src": "/pages/(.*)", "dest": "/public/pages/$1" },
    { "src": "/components/(.*)", "dest": "/public/components/$1" },
    { "src": "/utils/(.*)", "dest": "/public/utils/$1" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
